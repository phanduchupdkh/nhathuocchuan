                <option value="Mỹ phẩm nam">Mỹ phẩm nam</option>
                <option value="Tinh dầu thiên nhiên">Tinh dầu thiên nhiên</option>
                <option value="Tuyển tập son môi">Tuyển tập son môi</option>
                <option value="Kem Làm Mờ Sẹo">Kem Làm Mờ Sẹo</option>
                <option value="Kem Tan Mỡ">Kem Tan Mỡ</option>
                <option value="Kem Làm Trắng Da">Kem Làm Trắng Da</option>
            </select>
        </div>


        <div class="form-group">
        	<label>Giá Bán Lẻ Đề Xuất</label>
            <input class="form-control" name="giaban" placeholder="Giá Bán (VNĐ)" type="number" />
        </div>

        <div class="form-group">
           <label>Giá Gốc</label>
            <input class="form-control" name="giagoc" type="number" required/>

        </div>

        
        <div class="row"> 
          <div class="col-12 col-md-3 ">
          <label><strong>Mức mua 1: </strong></label>
          </div>
         <div class="form-group col-6 col-md-3">
            <input class="form-control" name="slmuc1" placeholder="mức mua" type="number"/>
        </div>
        <div class="form-group col-6 col-md-3">
            <input class="form-control" name="giamuc1" placeholder="Giá mức 1" type="number"/>
        </div>
        </div>

         <div class="row"> 
          <div class="col-12 col-md-3 ">
          <label><strong>Mức mua 2: </strong></label>
          </div>
          
         <div class="form-group col-6 col-md-3 ">
            <input class="form-control" name="slmuc2" placeholder="mức mua" type="number"/>
        </div>
        <div class="form-group col-6 col-md-3 ">
            <input class="form-control" name="giamuc2" placeholder="Giá mức 2" type="number"/>
        </div>
        </div>

        <div class="row"> 
          <div class="col-12 col-md-3 ">
          <label><strong>Mức mua 3: </strong></label>

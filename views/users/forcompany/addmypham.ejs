      <div class="alert alert-danger"><%=errors%></div>
    <%};%>
        <div class="form-group" style='width: 84%; margin-left: 8%; margin-top: 50px'>
            <label>Tải Hình ảnh lên </label><br/>
            <input type="file" value="uploader" id="fileButton" name="linkhinh">
            <img id="hinhanh" src="" style="width: 200px; display: none">

                <option value="Nước hoa">Nước hoa</option>
                <option value="Sơn móng rửa móng">Sơn móng rửa móng</option>
                <option value="Mỹ phẩm nam">Mỹ phẩm nam</option>
                <option value="Tinh dầu thiên nhiên">Tinh dầu thiên nhiên</option>
                <option value="Tuyển tập son môi">Tuyển tập son môi</option>
                <option value="Kem Làm Mờ Sẹo">Kem Làm Mờ Sẹo</option>
                <option value="Kem Tan Mỡ">Kem Tan Mỡ</option>
                <option value="Kem Làm Trắng Da">Kem Làm Trắng Da</option>
            </select>
        </div>
        <div class="form-group">
        	<label>Giá Bán</label>
            <input class="form-control" id="giaban" name="giaban" placeholder="Giá Bán (VNĐ)" type="number" />
        </div>
        <input style= "display:none" type="text" value="https://file.hstatic.net/1000287322/file/updating_4b3e39ad13974b06bd99d80bb44a2218.png" id="linkhinh" name="linkhinh">
		<button>Lưu Trữ</button>
      </form>

            <select class="field-input" id="kieuscb" name="kieuscb">
                <option value="/CBMP-QLD" selected>CBMP-QLD</option>
            </select>
        </div>
        <%if (errors!==""){%>
        <div class="alert alert-danger"><%=errors%></div>
        <%};%>
        <div class="form-group">
            <label>Chọn Phân Loại : </label>
            <select class="field-input" id="loaisanpham" name="loaisanpham">
                <option value="Mỹ Phẩm Khác" selected>Mỹ Phẩm Khác</option>
                <option value="Kem HT Trị Thâm Mụn">Kem HT Trị Thâm Mụn</option>
